---
import Container from '@/components/Container.astro';
import Link from './Link.astro';
import ThemeToggle from './ThemeToggle';
import { Icon } from 'astro-icon/components';
---

<header
  class='sticky top-0 z-10 backdrop-blur-md'
  style='background-color: color-mix(in srgb, var(--color-background) 80%, transparent)'
  transition:persist
>
  <Container>
    <div class='flex items-center justify-between gap-4 py-4'>
      <Link
        href='/'
        underline={false}
        subClass='rounded-sm p-2 hover:bg-[var(--color-accent-soft)]'
      >
        <div class='flex items-center gap-2'>
          <Icon name='material-symbols:home-outline-rounded' size={24} />
        </div>
      </Link>
      <nav class='flex items-center justify-between gap-4 px-2'>
        <Link
          href='/archive'
          underline={false}
          subClass='rounded-sm px-4 py-2 hover:bg-[var(--color-accent-soft)]'
          >Archive</Link
        >
        <ThemeToggle client:load />
      </nav>
    </div>
  </Container>
</header>
