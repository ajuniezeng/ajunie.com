---
import { format } from 'date-fns';
interface Props {
  lastModified?: Date;
}

const { lastModified } = Astro.props;
---

<h1 class='mt-2 mb-10 text-2xl font-bold text-center'>
  <slot />
  {
    lastModified ? (
      <div class='mt-4 text-sm font-normal'>
        last modified: {format(lastModified, 'yyyy-MM-dd')}
      </div>
    ) : null
  }
</h1>
