---
import Head from '@/components/Head.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { SITE } from '@/constants';

type Props = {
  title: string;
  description: string;
  image?: string;
};

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <Head
      title={`${title} | ${SITE.TITLE}`}
      description={description}
      image={image}
    />
    <script>
      import { initTheme } from '@/lib/theme';
      initTheme();
    </script>
  </head>
  <body>
    <div
      class='font-noto-serif box-border flex h-fit min-h-screen flex-col bg-neutral-50 text-gray-900 antialiased dark:bg-gray-900 dark:text-gray-100'
    >
      <Header />
      <main class='flex-grow'>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
